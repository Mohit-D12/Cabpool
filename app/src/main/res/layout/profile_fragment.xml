<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="18dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="YOUR PROFILE"
        android:layout_marginTop="50dp"
        android:textColor="#000000"
        android:textSize="28sp"/>

    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:id="@+id/profilePicture_profileFragment_xml"
        android:layout_marginTop="120dp"
        android:layout_centerHorizontal="true"
        app:roundAsCircle="true"
        />
    <ProgressBar
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:layout_margin="20dp"
        android:visibility="invisible"
        android:id="@+id/progress"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profilePicture_profileFragment_xml"
        android:layout_marginTop="35dp"
        android:layout_marginHorizontal="10dp"

        android:hint="Enter Name"
        android:id="@+id/name_profileFragment_xml"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_marginHorizontal="10dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_profileFragment_xml"
        android:layout_marginTop="8dp"
        android:hint="Enter Phone Number"
        android:inputType="phone"
        android:id="@+id/phone_profileFragment_xml"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone_profileFragment_xml"
        android:layout_marginTop="10dp"
        android:hint="Enter E-mail"
        android:layout_marginHorizontal="10dp"
        android:enabled="false"
        android:textColor="#000000"
        android:id="@+id/email_profileFragment_xml"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="7dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/email_profileFragment_xml"
        android:id="@+id/buttons_profileFragment_xml"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/save_profileFragment_xml"
            android:layout_alignParentRight="true"
            android:text="save"
            android:layout_marginLeft="4dp"
            android:backgroundTint="@color/floatingButton"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="submit"
            android:visibility="invisible"
            android:layout_toLeftOf="@id/save_profileFragment_xml"
            android:id="@+id/submit_profileFragment_xml"
            android:backgroundTint="@color/floatingButton"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="verify"
            android:layout_toLeftOf="@id/save_profileFragment_xml"
            android:id="@+id/verify_profileFragment_xml"
            android:backgroundTint="@color/floatingButton"
            />
    </RelativeLayout>


</RelativeLayout>